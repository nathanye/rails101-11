<tr>
  <td>#</td>
  <td><%= link_to(group.title, group_path(group)) %></td>
  <td><%= render_group_description(group) %></td>
  <td><%= group.user.email %></td>
  <td>
    <% if current_user & current_user == group.user %>
      <%= link_to("编辑", edit_group_path(group), class: "btn btn-sm btn-default") %>
      <%= link_to("删除", group_path(group), class: "btn btn-sm btn-default",
                  method: :delete, data: { confirm: "你确定要删除吗？" } )%>
    <% end %>
  </td>
</tr>
