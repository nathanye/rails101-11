<%= simple_form_for @group do |f| %>
  <div class="form-group">
    <%= f.input :title, :label => "标题", input_html: { class: "form-control" } %>
    <%= f.input :description, :label => "叙述", input_html: { class: "form-control" } %>
  </div>
  <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
